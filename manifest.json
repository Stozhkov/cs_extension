{
  "manifest_version": 2,
  "name": "CS Monitoring",
  "description" : "Приложение помогает поклонникам игры Counter Strike следить за своим игровым сервером и быстро получать доступ к статистике.",
  "version": "1.0",
  "icons": { "36": "512.png",
             "48": "512.png",
             "72": "512.png",
             "144": "512.png",
             "192": "512.png",
             "512": "512.png"},
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "http://abonent.teleoka.su/*",
    "storage",
    "notifications",
    "alarms"
  ],
  "browser_action": {
    "default_title": "CS Monitoring",
    "default_popup": "popup.html"
  }
}
